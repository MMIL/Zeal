<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <ImageView
        android:src="@drawable/zeal"
        android:adjustViewBounds="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:paddingBottom="10dp"
        android:layout_gravity="center_horizontal" />




    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_homepage_aboutzealicon"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        card_view:paddingEnd="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:padding="5dp"
        card_view:cardElevation="2dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ZEALICON is the annual techno-cultural fest of JSS Academy of Technical Education, Noida. ZEALICON&apos;16 is lined up with a plethora of much exhuberant cultural as well as technical events. "
        android:id="@+id/text_about"
android:fontFamily="sans-serif-light"
        android:textSize="20sp"
        android:background="#add5f8"
        android:padding="5dp"
        android:textAlignment="center"
        android:textColor="#000000"

        />


</android.support.v7.widget.CardView>

<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:adjustViewBounds="true"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:src="@drawable/extravaganza"/>


    <TextView
        android:background="#a7ffeb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="            DATE: 7 APRIL,2016 TO 9 APRIL,2016      "
        android:id="@+id/text_date"
        android:padding="8dp"
        android:textColor="#050505"
        android:textAlignment="center" />
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="horizontal" android:layout_width="match_parent"
android:layout_height="wrap_content"
android:textAlignment="center"
    android:background="#a7ffeb"
    android:weightSum="1">


    <ImageView
        android:src="@drawable/location"
        android:layout_width="46dp"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:id="@+id/imageView2" />

    <TextView
        android:background="#a7ffeb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Where?
          JSS Academy Of Technical Education"
        android:id="@+id/text_loc"
        android:padding="8dp"
        android:textColor="#050505"
        android:textAlignment="center" />


</LinearLayout>
</LinearLayout>
    </ScrollView>
</LinearLayout>